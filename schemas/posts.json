{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "slug",
        "placeholder": "URL"
      }
    },
    "featured": {
      "type": "Boolean",
      "config": {
        "default_value": false,
        "label": "featured"
      }
    },
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1,heading2,heading3,heading4,heading5,heading6",
        "label": "title",
        "placeholder": "Blog Title"
      }
    },
    "excerpt": {
      "type": "Text",
      "config": {
        "label": "excerpt",
        "placeholder": "Short description of the post"
      }
    },
    "feature_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": null,
          "height": null
        },
        "thumbnails": [],
        "label": "feature_image"
      }
    },
    "primary_author": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["authors"],
        "label": "primary_author",
        "placeholder": "Primary Author"
      }
    },
    "authors": {
      "type": "Group",
      "config": {
        "fields": {
          "author": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["authors"],
              "label": "author",
              "placeholder": "Contributor"
            }
          }
        },
        "label": "authors"
      }
    },
    "primary_category": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["categories"],
        "label": "primary_category",
        "placeholder": "Primary Category"
      }
    },
    "categories": {
      "type": "Group",
      "config": {
        "fields": {
          "category": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["categories"],
              "label": "category",
              "placeholder": "Category"
            }
          }
        },
        "label": "categories"
      }
    },
    "og_image": {
      "type": "Link",
      "config": {
        "allowTargetBlank": true,
        "label": "og_image",
        "select": null
      }
    },
    "og_title": {
      "type": "Text",
      "config": {
        "label": "og_title"
      }
    },
    "og_description": {
      "type": "Text",
      "config": {
        "label": "og_description"
      }
    },
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "meta_title"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "meta_description"
      }
    },
    "canonical_url": {
      "type": "Link",
      "config": {
        "allowTargetBlank": true,
        "label": "canonical_url",
        "select": null
      }
    }
  },
  "Post Content": {
    "content": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl",
        "allowTargetBlank": true,
        "label": "content",
        "placeholder": "Post Content"
      }
    }
  }
}
